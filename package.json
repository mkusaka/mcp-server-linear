{
  "name": "@mkusaka/mcp-server-linear",
  "version": "1.0.7",
  "description": "MCP server for using the Linear API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-server-linear": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "debug": "pnpm build && mcp-inspector dist/index.js",
    "start": "node dist/index.js",
    "prepublishOnly": "pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "linear",
    "api"
  ],
  "author": "mkusaka <hinoshita1992@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.10.2",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "msw": "^2.7.5",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@linear/sdk": "^39.0.0",
    "@modelcontextprotocol/sdk": "^1.10.1",
    "commander": "^13.1.0",
    "neverthrow": "^8.2.0",
    "winston": "^3.17.0",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "repository": {
    "url": "https://github.com/mkusaka/mcp-server-linear",
    "type": "git"
  }
}
